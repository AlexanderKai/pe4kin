%% -*- mode: erlang -*-

{erl_opts, [debug_info]}.
{deps, [{cowboy, "1.0.4"},
        {hackney, "1.6.0"},
        {jiffy, "0.14.7"}]}.

{overrides,
 [{override, jiffy,
   [
    {plugins, [pc]},
    {artifacts, ["priv/jiffy.so"]},
    {provider_hooks,
     [
      {post,
       [
        {compile, {pc, compile}},
        {clean, {pc, clean}}
       ]
      }]
    }
   ]}
 ]}.
